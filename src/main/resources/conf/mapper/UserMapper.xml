<mapper namespace="com.hwgif.demo.dao.impl.UserDaoImpl" >
    <resultMap id="BaseResultMap" type="com.hwgif.demo.bean.User" >
        <result property="id" jdbcType="INTEGER" column="id"/>
        <result property="name" jdbcType="VARCHAR" column="name"/>
        <result property="nick" jdbcType="VARCHAR" column="nick"/>
        <result property="password" jdbcType="VARCHAR" column="password"/>
        <result property="salt" jdbcType="VARCHAR" column="salt"/>
        <result property="phone" jdbcType="VARCHAR" column="phone"/>
        <result property="email" jdbcType="VARCHAR" column="email"/>
        <result property="status" jdbcType="VARCHAR" column="status"/>
        <result property="createTime" jdbcType="TIMESTAMP" column="create_time"/>
        <result property="updateTime" jdbcType="TIMESTAMP" column="update_time"/>
        <result property="isDel" jdbcType="TINYINT" column="is_del"/>
    </resultMap>
    <sql id="Base_Column_List" >
        id,
        name,
        nick,
        password,
        salt,
        phone,
        email,
        status,
        create_time,
        update_time,
        is_del
    </sql>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
        select
        <include refid="Base_Column_List" />
        from user
        where
        id = #{id}         and is_del = 0
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
delete from user
where  
id = #{id} 
        </delete>
    <insert id="insert" parameterType="com.hwgif.demo.bean.User" useGeneratedKeys="true" keyProperty="id">
        insert into user (<include refid="Base_Column_List" />
        )
        values (
        null,<!--主键自动生成  -->
        #{name},
        #{nick},
        #{password},
        #{salt},
        #{phone},
        #{email},
        #{status},
        now(),<!--生成日期  -->
        #{updateTime},
        #{isDel}        )
    </insert>
    <insert id="insertSelective" parameterType="com.hwgif.demo.bean.User" useGeneratedKeys="true" keyProperty="id">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test=" id != null" >
                id,
            </if>
            <if test=" name != null" >
                name,
            </if>
            <if test=" nick != null" >
                nick,
            </if>
            <if test=" password != null" >
                password,
            </if>
            <if test=" salt != null" >
                salt,
            </if>
            <if test=" phone != null" >
                phone,
            </if>
            <if test=" email != null" >
                email,
            </if>
            <if test=" status != null" >
                status,
            </if>
            <if test=" createTime != null" >
                create_time,
            </if>
            <if test=" updateTime != null" >
                update_time,
            </if>
            <if test=" isDel != null" >
                is_del,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test=" id != null" >
                #{id},
            </if>
            <if test=" name != null" >
                #{name},
            </if>
            <if test=" nick != null" >
                #{nick},
            </if>
            <if test=" password != null" >
                #{password},
            </if>
            <if test=" salt != null" >
                #{salt},
            </if>
            <if test=" phone != null" >
                #{phone},
            </if>
            <if test=" email != null" >
                #{email},
            </if>
            <if test=" status != null" >
                #{status},
            </if>
            <if test=" createTime != null" >
                #{createTime},
            </if>
            <if test=" updateTime != null" >
                #{updateTime},
            </if>
            <if test=" isDel != null" >
                #{isDel},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.hwgif.demo.bean.User" >
        UPDATE user
        <set>
            <if test="name!=null">
                name = #{name},
            </if>
            <if test="nick!=null">
                nick = #{nick},
            </if>
            <if test="password!=null">
                password = #{password},
            </if>
            <if test="salt!=null">
                salt = #{salt},
            </if>
            <if test="phone!=null">
                phone = #{phone},
            </if>
            <if test="email!=null">
                email = #{email},
            </if>
            <if test="status!=null">
                status = #{status},
            </if>
            <if test="createTime!=null">
                create_time = #{createTime},
            </if>
            <if test="isDel!=null">
                is_del = #{isDel},
            </if>
        </set>
        WHERE
        id = #{id}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.hwgif.demo.bean.User" >
update user set
name = #{name},
nick = #{nick},
password = #{password},
salt = #{salt},
phone = #{phone},
email = #{email},
status = #{status},
create_time = #{createTime},
is_del = #{isDel}
        where
        id = #{id} 
        </update>

    <!--查询条件-->
    <sql id="selectCondition">
        <where>
            <trim suffixOverrides="and">
                <!--
              <if test=" entity != null">
                <if test="entity.id!=null">
                  and id=#{entity.id}
                </if>
              </if>
               -->
                and is_del = 0
            </trim>
            <trim suffixOverrides="and">
                <if test="whereSql!=null">
                    and ${whereSql}
                </if>
            </trim>
        </where>
    </sql>

    <!-- 根据条件查询 -->
    <select id="getListByEntityAndPageInfo" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from user
        <include refid="selectCondition" />
        <if test="orderBy!=null">
            ${orderBy}
        </if>
        <if test="pageInfo!=null">
            limit ${pageInfo.size} offset ${pageInfo.startIndex}
        </if>
    </select>

    <!-- 查询总数 -->
    <select id="getTotalByEntity" resultType="java.lang.Integer">
        select count(*) from user
        <include refid="selectCondition" />
    </select>

</mapper>